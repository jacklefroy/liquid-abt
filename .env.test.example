# LIQUID ABT - Test Environment Configuration Example
# Copy this file to .env.test and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/liquid_abt_test"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-for-testing"

# Kraken Integration Test Credentials
# Get these from https://kraken.com → Settings → API
KRAKEN_TEST_API_KEY="your_kraken_test_api_key_here"
KRAKEN_TEST_PRIVATE_KEY="your_kraken_test_private_key_here"

# Optional: Enable real trading tests (DANGEROUS - uses real money)
# KRAKEN_SANDBOX_TRADING_ENABLED=true

# Optional: Kraken Production Credentials (for production environment only)
# KRAKEN_API_KEY="production_api_key"
# KRAKEN_PRIVATE_KEY="production_private_key"

# Test Configuration
NODE_ENV="test"